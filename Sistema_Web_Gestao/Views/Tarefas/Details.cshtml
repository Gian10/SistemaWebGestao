@model Sistema_Web_Gestao.Models.Tarefa

@{
    Layout = "_Layout";
}

<div class="max-w-4xl mx-auto py-8">
    <h1 class="text-2xl font-bold text-white mb-6">Detalhes da Tarefa</h1>
    <hr class="border-gray-300 my-4" />

    <form id="detailForm" class="bg-white shadow rounded-lg p-6 space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

        <fieldset class="space-y-4">
            <legend class="text-lg font-semibold text-gray-800 mb-4">Informações da Tarefa</legend>

            <div>
                <label asp-for="Mensagem" class="block text-sm font-medium text-gray-700">Mensagem</label>
                <input asp-for="Mensagem" class="input-field border-gray-300 rounded-md w-full text-black" readonly />
            </div>

            <div>
                <label asp-for="DataLimite" class="block text-sm font-medium text-gray-700">Data Limite</label>
                <input asp-for="DataLimite" type="date" class="input-field border-gray-300 rounded-md w-full text-black" readonly />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Usuário</label>
                <input value="@ViewBag.UsuarioNome" class="input-field border-gray-300 rounded-md w-full text-black" readonly />
            </div>

            <div>
                <label asp-for="Finalizada" class="block text-sm font-medium text-gray-700">Finalizada</label>
                <input asp-for="Finalizada" type="checkbox" class="form-check-input h-4 w-4 text-blue-600 border-gray-300 rounded" disabled />
            </div>
        </fieldset>

        <div class="flex items-center justify-between mt-6">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="text-blue-600 hover:underline text-sm font-medium">Editar</a>
            <a asp-action="Index" class="text-blue-600 hover:underline text-sm font-medium">Voltar para Lista</a>
        </div>
    </form>
</div>
